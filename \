#ifndef LEXER_H
#define LEXER_H

#include <string>
#include <vector>
#include <map>

enum TokType {
	Op,
	Var,
	Keyword,
	Literal
};

struct Tok {
	std::string data;
	TokType type;
};

static std::vector<std::string> ops = {
	"=", "+", "-", "*", "/"
};

class Lexer {
public:
	// Defualt constructor
	Lexer() {}
	Tok next_tok(std::string::const_iterator&) const;
	std::vector<Tok> tokenize(const std::string&) const;
private:
	std::forward_list<&Tok> toks;
};

#endif
